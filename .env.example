# API Keys (replace during evaluation)
OPENAI_API_KEY=

# Vector store
VECTOR_STORE=chroma
CHROMA_DIR=store/chroma

# KB location (must be ENGLISH content)
KB_DIR=app/data/kb

# Embeddings (fast + good quality)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Retrieval params
TOP_K=4
MIN_SCORE=0.0  # keep 0.0 for now; we’ll tune later

# App
APP_NAME="Shakers AI — Support & Recommendations"

# --- LLM config ---
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.2
LLM_MAX_TOKENS=900

# --- LLM runtime controls ---
LLM_TIMEOUT_SECONDS=4
LLM_MAX_RETRIES=1

# OOS detector
OOS_THRESHOLD=0.60

# OOS thresholds (optional; defaults keep current behavior)
OOS_SIM_MIN=0.72      # absolute minimum top similarity to be in-scope
OOS_MARGIN_MIN=0.05   # top1 - top2 margin
OOS_REQUIRE_TOPK=2    # require at least this many hits to apply margin